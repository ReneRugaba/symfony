{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-6 mx-auto d-block m-3">
            {% for flash_message in app.session.flashBag.get('success') %}
                <div class="flash-notice alert alert-success">
                    {{ flash_message }}
                </div>
            {% endfor %}
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">Votre identifiant ou votre mot de passe est erronné!</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        l'utilisateur {{ app.user.username }} est toujour connecté, merci de vous deconnecter.
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary mt-2 col-12" type="submit">
                    connexion
                </button>
            </form>        
        </div>
    </div>
</div>
{% endblock %}
